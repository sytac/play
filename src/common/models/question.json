{
  "name": "Question",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "question": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "quiz": {
      "type": "belongsTo",
      "model": "Quiz",
      "foreignKey": "quizId"
    },
    "options": {
      "type": "hasMany",
      "model": "Option",
      "foreignKey": "questionId"
    },
    "answers": {
      "type": "hasMany",
      "model": "QuizEntryAnswer",
      "foreignKey": "questionId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "withOptions"
    }
  ],
  "methods": {}
}
